<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="200dp">

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login" />

    <Button
        android:id="@+id/addAnimalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Animal"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/addAnimalForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/animalNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Animal Name" />

        <EditText
            android:id="@+id/animalSpeciesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Species" />

        <EditText
            android:id="@+id/animalAgeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number" />

        <EditText
            android:id="@+id/animalHealthEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Health Status" />

        <EditText
            android:id="@+id/animalKeeperIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Keeper ID"
            android:inputType="number" />

        <EditText
            android:id="@+id/animalDietEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Diet" />

        <Button
            android:id="@+id/submitAnimalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/animalRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>